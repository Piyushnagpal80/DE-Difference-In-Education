doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Organize an Event
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href='#') Organize An Event
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/profile/discover')
                            | Discover
                            span.sr-only (current)
                    li.nav-item.active
                        a.nav-link(href='/profile/resources')
                            | Resources
                            span.sr-only
                    li.nav-item
                        a.nav-link(href='/users/logout') Log Out
        block message
        div.container.mx-auto.p-5
            form(action="/profile/organize" method="post").container.mx-auto.p-5.border
                h1.text-center Organize An Event
                .form-group
                    label(for="organizer") Organizer
                    input.form-control(type="text", name="organizer", id="organizer", placeholder="Name of the organizing community")
                .form-group
                    label(for="name") Name of the Event
                    input.form-control(type="text", name="name", id="name", placeholder="Name")
                .form-group
                    label(for="type") Type of the Event
                    select.form-control(name="type", id="type")
                        option Examination
                        option Hackathon
                        option Contest
                .form-group
                    label(for="date") Date of the Event
                    input.form-control(type="date", name="date", id="date")
                .form-group
                    label(for="desc") Describe Your Event
                    textarea.form-control(rows="3", name="desc", id="desc")
                button.btn.btn-primary(type="submit") Submit
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous")