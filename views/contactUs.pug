doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Contact Form
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
        style
            include ../css/contactform.css
        style
            include ../css/bot.css
    body
        section
            .container
                #contactInfoBar
                    div Click to view Contact Info..
                    i.fa.fa-angle-double-down
                .contactinfo
                    div
                        h2 Contact Info
                        ul.info
                            li
                                span
                                    i.fa.fa-map-marker(aria-hidden="true")
                                span
                                    | D-131,first block
                                    | Saket,New Delhi
                                    | 314567
                            li
                                span
                                    i.fa.fa-envelope-o(aria-hidden="true")
                                span XYZ08876@gmail.com
                            li
                                span
                                    i.fa.fa-phone(aria-hidden="true")
                                span 653-373-824
                    ul.sci
                        li
                            a(href="https://facebook.com")
                                i.fa.fa-facebook(aria-hidden="true")
                        li
                            a(href="https://linkedin.com")
                                i.fa.fa-linkedin(aria-hidden="true")
                        li
                            a(href="https://pintrest.com")
                                i.fa.fa-pinterest-p(aria-hidden="true")
                        li
                            a(href="https://instagram.com")
                                i.fa.fa-instagram(aria-hidden="true")
                        li
                            a(href="https://telegram.com")
                                i.fa.fa-telegram(aria-hidden="true")
                    #hamCross
                        i.fa.fa-times
                .contactForm
                    h2 Send a Message
                    .formBox
                        .inputBox.w50
                            input(type="text" name="" required="")
                            span First Name
                        .inputBox.w50
                            input(type="text" name="" required="")
                            span Last Name
                        .inputBox.w50
                            input(type="text" name="" required="")
                            span Email Address
                        .inputBox.w50
                            input(type="text" name="" required="")
                            span Mobile Number
                        .inputBox.w100
                            textarea(type="text" name="" required="")
                            span Write your message here...
                        .inputBox.w100
                            input(type="submit" value="Send")
        #chatBot
            #chatBody
                #flex
                    #result
                    .input
                        input#ans(type="text" placeholder="Enter your response" required="")
            #botButton
                i.fa.fa-search
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    script
        include ../js/bot.js
    script
        include ../js/contactForm.js
